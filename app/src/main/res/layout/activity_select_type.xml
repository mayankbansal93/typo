<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#07678d"
    tools:context="my.example.mayank.alphabets.SelectType">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/typo"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:text="Alphabets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="26dp"
        android:background="@drawable/btn_black" style="@style/ButtonText"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:text="Digits"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b1"
        android:textSize="26dp"
        android:background="@drawable/btn_black" style="@style/ButtonText"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b2"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="180dp"
        android:src="@drawable/leader"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:maxWidth="70dp"
        android:id="@+id/iv2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b2"
        android:layout_marginTop="80dp"
        android:src="@drawable/mon"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:id="@+id/iv4"
        android:layout_marginLeft="80dp"/>

</RelativeLayout>
